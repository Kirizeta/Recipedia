<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditRecipe">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:paddingBottom="100dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/aqua">

            <ImageView
                android:id="@+id/recipe_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_left"
                android:paddingLeft="30dp"
                app:tint="@color/white" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDIT RECIPE"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginLeft="55dp"
                android:padding="15dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="@color/aqua"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:elevation="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Picture"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

                <ImageView
                    android:id="@+id/recipe_photo"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/juice"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe name"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/recipe_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="0sp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/recipe_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:text="Jus Jeruk"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/recipe_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:text="Untuk membuat jus jeruk bahan yang dibutuhkan tentu saja adalah buah jeruk. Anda bisa menyiapkan"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direction"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/recipe_direction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:padding="16dp"
                    android:text="1. Cara pertama adalah bersihkan jeruk kemudian kupas kulitnya sampai bersih"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time (Min)"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/recipe_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:padding="16dp"
                    android:text="30"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serving"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/recipe_serving"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:padding="16dp"
                    android:text="3"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories (Cal - Estimation)"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/recipe_calories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:padding="16dp"
                    android:text="50"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Link Video (Recipe Implementation)"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/recipe_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:padding="16dp"
                    android:text="https://www.youtube.com/watch?v=RbpU_FeBDmU"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/recipe_category"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/category_cuy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:gravity="center_vertical"
                        android:text="meat"
                        android:padding="16dp"
                        android:background="@drawable/rectangle"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:layout_marginTop="60dp"
                    android:id="@+id/create_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="18sp"
                    android:text="Save Recipe"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/aqua"
                    android:elevation="20dp"


                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </TableLayout>

</ScrollView>