                        android:layout_marginTop="12dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boba Drink"
                        android:textColor="@color/black"
                        android:textSize="15sp"
