            android:text="Drinks"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="22dp"
            />

