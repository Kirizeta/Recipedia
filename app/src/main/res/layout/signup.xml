<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <ImageView
        android:id="@+id/img_1"
        android:layout_width="397dp"
        android:layout_height="294dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/bg_signup"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/img_1"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:text="Name"
                android:textColor="#1B0E11"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


            <EditText
                android:id="@+id/signup_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:autofillHints="True"
                android:background="@drawable/textbox"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="7dp"
                android:hint="Enter your name"
                android:inputType="textPersonName"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:textColorHint="#302C2C"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:text="Phone Number"
                android:textColor="#1B0E11"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:layout_marginTop="11dp"/>


            <EditText
                android:id="@+id/signup_telephone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:autofillHints="True"
                android:background="@drawable/textbox"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="7dp"
                android:hint="Enter your phone number"
                android:inputType="textPersonName"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:textColorHint="#302C2C"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:text="Date of Birth (DD/MM/YYYY)"
                android:textColor="#1B0E11"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:layout_marginTop="11dp"/>


            <EditText
                android:id="@+id/signup_dob"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:autofillHints="True"
                android:background="@drawable/textbox"
                android:drawableLeft="@drawable/calen"
                android:drawablePadding="7dp"
                android:hint="Enter your date of birth"
                android:inputType="date"
                android:focusable="false"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:textColorHint="#302C2C"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="5dp"
                android:text="Email"
                android:textColor="#1B0E11"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:autofillHints="True"
                android:background="@drawable/textbox"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="7dp"
                android:paddingRight="15dp"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:paddingLeft="7dp"
                android:textColorHint="#302C2C"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="5dp"
                android:text="Password"
                android:textColor="#1B0E11"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:autofillHints="True"
                android:background="@drawable/textbox"
                android:drawableLeft="@drawable/ic_lock"
                android:drawableRight="@drawable/eye_hide"
                android:drawablePadding="7dp"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:textColorHint="#302C2C"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="5dp"
                android:text="Confirm Password"
                android:textColor="#1B0E11"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/signup_cpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:autofillHints="True"
                android:background="@drawable/textbox"
                android:drawableLeft="@drawable/ic_lock"
                android:drawableRight="@drawable/eye_hide"
                android:drawablePadding="7dp"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:textColorHint="#302C2C"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />


            <Button
                android:id="@+id/button_signup"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/textbox"
                android:backgroundTint="@color/aqua"
                android:hint="SIGN UP"
                android:textColorHint="@color/white"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_signup"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="4dp"
                    android:text="Do you have an account ?" />

                <TextView
                    android:id="@+id/text_toLogin"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="102dp"
                    android:text="Login Here"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </TableLayout>

</ScrollView>