                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/boba_label"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="75dp"
                        android:src="@drawable/boba"
