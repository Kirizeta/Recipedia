<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewRecipe">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:paddingBottom="100dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/aqua">

            <ImageView
                android:id="@+id/review_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_left_white"
                android:paddingLeft="20dp"
                android:paddingRight="50dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECIPE REVIEW"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="15dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="20dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/review_photo"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/beef_pepper"
                app:shapeAppearanceOverlay="@style/circular"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/review_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="16dp"
                android:text="Pecel Ayam Bakar Kecombrang"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="By :"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    />

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:src="@drawable/userfood"/>

                <TextView
                    android:id="@+id/review_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User 1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="0dp"
                android:text="How was your experience with this recipe?\nYour Feedback is important to improve our quality of services"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                />

            <RatingBar
                android:id="@+id/review_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                />

            <TextView
                android:id="@+id/review_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginBottom="20dp"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                />

            <EditText
                android:id="@+id/review_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type Review..."
                android:background="@drawable/rectangle"
                android:gravity="top"
                android:minHeight="100dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/star"/>

            <Button
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/review_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundaqua"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Post Review"/>

        </LinearLayout>

    </TableLayout>

    </ScrollView>